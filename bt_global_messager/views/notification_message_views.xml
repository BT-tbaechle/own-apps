<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
         <!-- Notification Message Views -->
        <record model="ir.ui.view" id="notification_message_tree_view">
            <field name="name">notification.message.tree.view</field>
            <field name="model">notification.message</field>
            <field name="arch" type="xml">
                <tree string="Notification Message List">
                    <field name="notification_id"/>
                    <field name="name"/>
                    <field name="custom_message"/>
                    <field name="notify_time_type_id"/>
                    <field name="notify_type_ids" widget="many2many_tags"/>
                    <field name="notification_offset_unit"
                           attrs="{'readonly': [('notify_time_type_id', '!=', %(notification_time_type_rel)d)]}"/>
                    <field name="notification_offset_as_unit"
                           attrs="{'readonly': [('notify_time_type_id', '!=', %(notification_time_type_rel)d)]}"/>
                    <field name="notification_date"
                           attrs="{'readonly': [('notify_time_type_id', '!=', %(notification_time_type_abs)d)]}"/>
                    <field name="notification_time" widget="float_time"
                           attrs="{'readonly': [('notify_time_type_id', '!=', %(notification_time_type_abs)d)]}"/>
                    <field name="is_sent"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="notification_message_form_view">
            <field name="name">notification.message.form.view</field>
            <field name="model">notification.message</field>
            <field name="arch" type="xml">
                <form string="Notification Message">
                    <sheet>
                        <group>
                            <group>
                                <field name="notification_id" invisible="True"/>
                                <field name="notify_time_type_id" attrs="{'readonly': [('is_sent', '=', True)]}"/>
                                <field name="is_sent"/>
                            </group>
                            <group>
                                <field name="notification_offset_unit"
                                       attrs="{'invisible': [('notify_time_type_id', '!=', %(notification_time_type_rel)d)]}"/>
                                <field name="notification_offset_as_unit"
                                       attrs="{'invisible': [('notify_time_type_id', '!=', %(notification_time_type_rel)d)]}"/>
                                <field name="notification_date"
                                       attrs="{'invisible': ['|',('notify_time_type_id', '!=', %(notification_time_type_abs)d),('is_sent', '=', True)]}"/>
                                <field name="notification_time" widget="float_time"
                                       attrs="{'invisible': ['|',('notify_time_type_id', '!=', %(notification_time_type_abs)d),('is_sent', '=', True)]}"/>
                            </group>
                            <group>
                                <field name="notify_type_ids" attrs="{'readonly': [('is_sent', '=', True)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="message_data_page" string="Message">
                                <group>
                                    <field name="custom_message" attrs="{'readonly': [('is_sent', '=', True)]}"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="name" attrs="{'invisible': ['|',('custom_message', '=', False),('is_sent', '=', True)]}"/>
                                        <field name="message" attrs="{'invisible': ['|',('custom_message', '=', False),('is_sent', '=', True)]}"/>
                                    </group>
                                    <group>
                                        <field name="icon" widget="image" class="message_icon_size"
                                               attrs="{'invisible': ['|',('custom_message', '=', False),('is_sent', '=', True)]}"/>
                                        <field name="timeout" attrs="{'invisible': ['|',('custom_message', '=', False),('is_sent', '=', True)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>