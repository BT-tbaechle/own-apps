<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
         <!-- Messager Notification Views -->
        <record model="ir.ui.view" id="notification_tree_view">
            <field name="name">notification.tree.view</field>
            <field name="model">notification.notification</field>
            <field name="arch" type="xml">
                <tree string="Notification List">
                    <field name="name"/>
                    <field name="send_manually"/>
                    <field name="event_date"/>
                    <field name="event_time" widget="float_time"/>
                    <field name="notification_time_names"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="notification_form_view">
            <field name="name">notification.form.view</field>
            <field name="model">notification.notification</field>
            <field name="arch" type="xml">
                <form string="Notification">
                    <header>
                        <button string="Send" name="send_notification" type="object"
							attrs="{'invisible': [('send_manually', '=', False)]}"/>
                    </header>
                    <sheet>
                        <h2>
                            <group>
                                <field name="name"/>
                            </group>
                        </h2>
                        <group>
                            <group>
                                <field name="message"/>
                                <field name="icon" widget="image" class="message_icon_size"/>
                            </group>
                            <group>
                                <field name="send_manually"/>
                                <field name="event_date" attrs="{'invisible': [('send_manually', '=', True)]}"/>
                                <field name="event_time" attrs="{'invisible': [('send_manually', '=', True)]}" widget="float_time"/>
                                <field name="timeout"/>
                            </group>
                            <group>
                                <field name="notify_type_ids"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="notification_times_page" string="Notification Times">
                                <field name="notification_time_ids" context="{'default_notification_id': active_id, 'default_name': name, 'default_message': message, 'default_timeout': timeout, 'default_notify_type_ids': notify_type_ids}"
                                       attrs="{'readonly': [('send_manually', '=', True)]}">
                                    <tree>
                                        <field name="notification_id" invisible="True"/>
                                        <field name="notify_time_type_id"/>
                                        <field name="effective_notification_date"/>
                                        <field name="effective_notification_time" widget="float_time"/>
                                        <field name="custom_message"/>
                                        <field name="is_sent"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="notification_search_view" model="ir.ui.view">
            <field name="name">notification.search.view</field>
            <field name="model">notification.notification</field>
            <field name="arch" type="xml">
                <search string="Search Notifications">
                    <field name="name"/>
                    <field name="message"/>
                    <filter name="manual_filter" string="Manual Notification"
                            domain="[('send_manually', '=', True)]" />
                    <filter name="time_bases_filter" string="Time-Based Notification"
                            domain="[('send_manually', '=', False)]" />
                    <group string="Group By" name="groupby">
                        <filter string="Event Date" name="event_date_groupby" context="{'group_by': 'event_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Messager Notification Actions -->
        <record model="ir.actions.act_window" id="notification_view_action">
            <field name="name">Notifications</field>
            <field name="res_model">notification.notification</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Messager Notification Menuitems -->
        <menuitem id="global_messager_main_menu" name="Global Messager"
                  parent="base.menu_administration"
                  action="notification_view_action"
                  sequence="5"/>

    </data>
</openerp>